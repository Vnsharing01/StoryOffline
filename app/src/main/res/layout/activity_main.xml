<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/nen_truyen"
    tools:context=".views.MainActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="3dp"
        android:background="@color/backgroundTitleColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/paper_icon_home"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_timKiem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_border_tim_kiem"
                android:textSize="15sp"
                android:hint="@string/tim_kiem_truyen"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/border_actionbar_horizontal_margin"
                android:paddingRight="@dimen/border_actionbar_horizontal_margin"
                android:layout_marginTop="@dimen/border_actionbar_vertical_margin"
                android:layout_marginBottom="@dimen/border_actionbar_vertical_margin"
                android:layout_marginLeft="@dimen/border_actionbar_horizontal_margin"
                android:layout_marginRight="@dimen/border_actionbar_horizontal_margin"
                android:layout_weight="8"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_TheLoai"
                android:layout_weight="1"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_theloai"
                android:paddingRight="@dimen/border_actionbar_horizontal_margin"/>
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundTitleColor"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        style="@style/MyCustomTabLayout"
        app:tabTextAppearance="@style/MyCustomTabTextStyle">

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabLayout"
        android:layout_below="@+id/toolBar">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>