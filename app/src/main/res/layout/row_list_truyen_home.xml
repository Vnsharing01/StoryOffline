<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/item_list_vertical_margin"
    android:layout_marginBottom="@dimen/item_list_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border_item_list"
        android:paddingLeft="@dimen/border_actionbar_horizontal_margin"
        android:paddingRight="@dimen/border_actionbar_horizontal_margin"
        android:paddingBottom="@dimen/border_actionbar_horizontal_margin"
        android:paddingTop="@dimen/border_actionbar_horizontal_margin"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_BiaSach"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:src="@drawable/test"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/border_actionbar_horizontal_margin"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_TenTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Long Tinh Truyền Thuyết"
                android:textStyle="bold"
                android:textColor="@color/textTitleStoryColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tác giả: "
                    android:textColor="@color/textInfoStoryColor"
                    android:textSize="15sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_TacGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/textInfoStoryColor"
                    android:text="Hoả Vân"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Chương: "
                    android:textColor="@color/textInfoStoryColor"
                    android:textSize="15sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_SoChuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/textInfoStoryColor"
                    android:text="250"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thể loại: "
                    android:textColor="@color/textInfoStoryColor"
                    android:textSize="15sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_TheLoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/textInfoStoryColor"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Fantasy"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>