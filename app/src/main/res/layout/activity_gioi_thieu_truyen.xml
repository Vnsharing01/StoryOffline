<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nen_truyen"
    tools:context=".views.GioiThieuTruyenActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:elevation="3dp">

            </com.google.android.material.appbar.MaterialToolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/border_actionbar_horizontal_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_BiaSach"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/test"
                        android:paddingVertical="@dimen/border_actionbar_vertical_margin"
                        android:layout_gravity="center_horizontal"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_TenTruyen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/textTitleStoryColor"
                        android:text="Long Tinh Truyền Thuyết"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/border_actionbar_vertical_margin"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/border_vertical_margin"
                    android:paddingBottom="@dimen/border_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/border_horizontal_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/border_actionbar_horizontal_margin">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/textInfoStoryColor"
                            android:text="Tác Giả: "/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_TacGia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hoả Vân"
                            android:textColor="@color/textInfoStoryColor"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/border_actionbar_horizontal_margin">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/textInfoStoryColor"
                            android:text="Số Chương: "/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_SoChuong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="350"
                            android:textColor="@color/textInfoStoryColor"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/border_actionbar_horizontal_margin">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/textInfoStoryColor"
                            android:text="Thể Loại: "/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_TheLoai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fantasy, Tiên hiệp, Hài hước, Tình Cảm"
                            android:textColor="@color/textInfoStoryColor"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_DocTruyen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Đọc Truyện"
                        android:textSize="15sp"
                        android:textColor="@color/textTitleColor"
                        android:background="@drawable/border_item_button"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="@dimen/border_vertical_margin"
                        android:layout_marginTop="@dimen/border_vertical_margin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="9"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/border_actionbar_horizontal_margin"
                        android:paddingRight="@dimen/border_actionbar_horizontal_margin"
                        android:layout_marginBottom="@dimen/border_vertical_margin"
                        android:layout_marginTop="@dimen/border_vertical_margin"
                        android:background="@drawable/border_item_list"
                        android:backgroundTint="@color/colorPrimary"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_YeuThich"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/icon_like_white"
                            android:layout_marginRight="@dimen/item_list_horizontal_margin" />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_YeuThich"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/yeu_thich"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/textTitleColor"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/border_horizontal_margin"
                        android:paddingLeft="@dimen/border_actionbar_horizontal_margin"
                        android:paddingRight="@dimen/border_actionbar_horizontal_margin"
                        android:layout_marginBottom="@dimen/border_vertical_margin"
                        android:layout_marginTop="@dimen/border_vertical_margin"
                        android:background="@drawable/border_item_list"
                        android:backgroundTint="@color/backgroundTitleColor"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_DanhSach"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_list_white"
                            android:layout_marginRight="@dimen/item_list_horizontal_margin" />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_DanhSachChuong"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Danh Sách"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/textTitleColor"/>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_MoTa"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:padding="@dimen/border_vertical_margin"
                    android:textSize="15sp"
                    android:text="Tại kỉ Hồng Bàng trong hỗn mang đản sinh ra một quả trứng kì lạ . ......."
                    android:layout_marginTop="@dimen/border_actionbar_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/shape_border_tim_kiem"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>